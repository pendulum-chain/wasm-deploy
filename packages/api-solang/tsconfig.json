{
  "compilerOptions": {
    "outDir": "build",
    "declaration": true,
    "typeRoots": ["../../node_modules/@types"],
    "types": ["node"],
    "module": "commonjs",

    "lib": ["es2021"],
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },

  "include": ["src/**/*"]
}
